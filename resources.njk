<script>
(function() {
    var modal = document.getElementById('resource-modal');
    var modalTitle = document.getElementById('modal-guide-title');
    var form = document.getElementById('resource-form');
    var backdrop = modal.querySelector('.resource-modal-backdrop');
    var closeBtn = modal.querySelector('.resource-modal-close');
    var pendingFile = '';

    // Open modal on download click
    document.querySelectorAll('.resource-unlock-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
            pendingFile = btn.getAttribute('data-file');
            modalTitle.textContent = btn.getAttribute('data-title');
            modal.style.display = 'flex';
            form.querySelector('[name="name"]').focus();
        });
    });

    // Close modal
    function closeModal() { modal.style.display = 'none'; }
    closeBtn.addEventListener('click', closeModal);
    backdrop.addEventListener('click', closeModal);
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });

    // Form submit
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        var name = form.querySelector('[name="name"]').value.trim();
        var email = form.querySelector('[name="email"]').value.trim();
        var phone = form.querySelector('[name="phone"]').value.trim();
        var honeypot = form.querySelector('[name="website"]').value;

        if (honeypot || !name || !email) return;

        // Send lead data to AmentCase
        try {
            fetch('https://amentcase.com/api/website-lead', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    first_name: name.split(' ')[0] || name,
                    last_name: name.split(' ').slice(1).join(' ') || '',
                    email: email,
                    phone: phone,
                    matter_type: 'Resource Download',
                    message: 'Downloaded: ' + pendingFile.split('/').pop(),
                    website_url: ''
                })
            }).catch(function() {});
        } catch(err) {}

        // Trigger download
        closeModal();
        var a = document.createElement('a');
        a.href = pendingFile;
        a.download = '';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
    });
})();
</script>
