<script>
(function() {
    var gate = document.getElementById('resource-gate');
    var cards = document.getElementById('resource-cards');
    var form = document.getElementById('resource-form');

    // Check if already unlocked
    try {
        if (localStorage.getItem('ament_resources_unlocked') === 'true') {
            gate.style.display = 'none';
            cards.style.display = '';
        }
    } catch(e) {}

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        var name = form.querySelector('[name="name"]').value.trim();
        var email = form.querySelector('[name="email"]').value.trim();
        var phone = form.querySelector('[name="phone"]').value.trim();
        var honeypot = form.querySelector('[name="website"]').value;

        if (honeypot) return;
        if (!name || !email) return;

        // Send lead data
        try {
            fetch('/api/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    type: 'resource_download',
                    name: name,
                    email: email,
                    phone: phone,
                    source: 'resources_page'
                })
            }).catch(function() {});
        } catch(err) {}

        // Unlock downloads
        gate.style.display = 'none';
        cards.style.display = '';
        try { localStorage.setItem('ament_resources_unlocked', 'true'); } catch(e) {}
    });
})();
</script>
