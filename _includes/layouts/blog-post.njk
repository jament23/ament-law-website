---
layout: layouts/base.njk
---
{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ title }}",
    "description": "{{ description }}",
    "datePublished": "{{ date | dateFormat }}",
    "url": "https://www.ament.law{{ page.url }}",
    "inLanguage": "en-US",
    "isPartOf": {
        "@type": "Blog",
        "name": "Ament Law Group Blog",
        "url": "https://www.ament.law/blog/"
    },
    "author": {
        "@type": "{% if author_type %}{{ author_type }}{% else %}Organization{% endif %}",
        {% if author_url %}"url": "https://www.ament.law{{ author_url }}",{% endif %}
        {% if author_credentials %}"hasCredential": "{{ author_credentials }}",{% endif %}
        {% if author_jobtitle %}"jobTitle": "{{ author_jobtitle }}",{% endif %}
        "name": "{{ author | default('Ament Law Group') }}"
    },
    "publisher": {
        "@type": "Organization",
        "name": "Ament Law Group, P.C.",
        "url": "https://www.ament.law"
    },
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://www.ament.law{{ page.url }}"
    },
    "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": [".blog-article h2", ".blog-article p"]
    },
    "about": {
        "@type": "Thing",
        "name": "Pennsylvania Law"
    }
}
</script>
{% endblock %}
<section class="simple-header">
    <div class="container">
        <h1>{{ title }}</h1>
        <p class="post-meta-header">{{ date | dateFormat }}{% if author %} &bull; By {% if author_url %}<a href="{{ author_url }}" style="color:rgba(255,255,255,0.85);">{{ author }}</a>{% else %}{{ author }}{% endif %}{% endif %}</p>
    </div>
</section>
<section id="blog-post-content">
    <div class="container">
        <div class="practice-area-layout">
            <article class="practice-area-main blog-article">
                {{ content | safe }}

                {% if author_bio %}
                <div class="author-box">
                    <div class="author-box-photo"></div>
                    <div class="author-box-info">
                        <h4>About the Author</h4>
                        <h3>{% if author_url %}<a href="{{ author_url }}">{{ author }}</a>{% else %}{{ author }}{% endif %}</h3>
                        <p>{{ author_bio }}</p>
                    </div>
                </div>
                {% endif %}

                <div class="blog-cta">
                    <h3>Need Help with Your Estate?</h3>
                    <p>At Ament Law Group, P.C., we help Pennsylvania families protect their wealth and plan for the future. Whether you need a trust, will, or probate administration assistance, our team is here to guide you every step of the way.</p>
                    <p><strong>Call us today at <a href="tel:724-733-3500">(724) 733-3500</a> to schedule your consultation.</strong></p>
                </div>
            </article>
            <aside class="practice-area-sidebar">
                <div class="sidebar-widget">
                    <h4>Related Services</h4>
                    <ul class="sidebar-links">
                        {% if related_services %}
                            {% for service in related_services %}
                            <li><a href="{{ service.url }}">{{ service.name }}</a></li>
                            {% endfor %}
                        {% else %}
                        <li><a href="/practice-areas/estate-planning/">Estates & Trusts</a></li>
                        <li><a href="/practice-areas/probate-administration/">Probate Administration</a></li>
                        <li><a href="/practice-areas/real-estate-law/">Real Estate Law</a></li>
                        {% endif %}
                    </ul>
                </div>
                <div class="sidebar-widget contact-widget">
                    <h4>Schedule a Consultation</h4>
                    <p>We're here to help with your legal needs.</p>
                    <p class="sidebar-phone"><a href="tel:724-733-3500">(724) 733-3500</a></p>
                    <a href="/contact/" class="cta-button">Contact Us</a>
                </div>
            </aside>
        </div>
    </div>
</section>
