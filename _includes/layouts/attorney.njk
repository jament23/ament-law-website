---
layout: layouts/base.njk
---
{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Attorney",
    "name": "{{ attorney_name }}",
    "jobTitle": "{{ attorney_role }}",
    "telephone": "+1-724-733-3500",
    "url": "https://www.ament.law{{ page.url }}",
    "worksFor": {
        "@type": "LegalService",
        "@id": "https://www.ament.law/#organization"
    },
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "3950 Wm Penn Hwy, Suite 5",
        "addressLocality": "Murrysville",
        "addressRegion": "PA",
        "postalCode": "15668",
        "addressCountry": "US"
    }
}
</script>
{% endblock %}
<section id="attorney-profile">
    <div class="container">
        <div class="attorney-profile-layout">
            <aside class="attorney-sidebar">
                {% if attorney_photo %}
                <img src="{{ attorney_photo }}" alt="{{ attorney_name }} attorney at Ament Law Group Murrysville PA" class="attorney-headshot" width="400" height="400">
                {% else %}
                <div class="attorney-photo-placeholder"></div>
                {% endif %}
                <h2>{{ attorney_name }}</h2>
                <p class="attorney-title">{{ attorney_role }}</p>
                <div class="attorney-contact-info">
                    <h4>Contact</h4>
                    <p>Phone: <a href="tel:724-733-3500">(724) 733-3500</a></p>
                    <a href="/contact/" class="cta-button">Schedule a Consultation</a>
                </div>
            </aside>
            <article class="attorney-bio">
                {{ content | safe }}
                {% if reviews and reviews.length %}
                <h3>Client Reviews</h3>
                <div class="attorney-reviews">
                    {% for review in reviews %}
                    <div class="attorney-review-card">
                        <div class="attorney-review-stars" aria-label="5 out of 5 stars">★★★★★</div>
                        <p class="attorney-review-text">"{{ review.text }}"</p>
                        {% if review.source %}
                        <p class="attorney-review-source">— {{ review.source }}</p>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </article>
        </div>
    </div>
</section>
