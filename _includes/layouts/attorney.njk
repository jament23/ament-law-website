---
layout: layouts/base.njk
---
{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Attorney",
    "name": "{{ attorney_name }}",
    "jobTitle": "{{ attorney_role }}",
    "email": "{{ attorney_email }}",
    "telephone": "+1-724-733-3500",
    "url": "https://www.ament.law{{ page.url }}",
    "worksFor": {
        "@type": "LegalService",
        "@id": "https://www.ament.law/#organization"
    },
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "3950 Wm Penn Hwy, Suite 5",
        "addressLocality": "Murrysville",
        "addressRegion": "PA",
        "postalCode": "15668",
        "addressCountry": "US"
    }
}
</script>
{% endblock %}
<section id="attorney-profile">
    <div class="container">
        <div class="attorney-profile-layout">
            <aside class="attorney-sidebar">
                {% if attorney_photo %}
                <img src="{{ attorney_photo }}" alt="Photo of {{ attorney_name }}" class="attorney-headshot">
                {% else %}
                <div class="attorney-photo-placeholder"></div>
                {% endif %}
                <h2>{{ attorney_name }}</h2>
                <p class="attorney-title">{{ attorney_role }}</p>
                <div class="attorney-contact-info">
                    <h4>Contact</h4>
                    <p>Email: <a href="mailto:{{ attorney_email }}">{{ attorney_email }}</a></p>
                    <p>Phone: <a href="tel:724-733-3500">(724) 733-3500</a></p>
                </div>
            </aside>
            <article class="attorney-bio">
                {{ content | safe }}
            </article>
        </div>
    </div>
</section>
