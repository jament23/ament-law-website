---
layout: layouts/base.njk
---
{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "LegalService",
    "name": "{{ title }}",
    "description": "{{ description }}",
    "url": "https://www.ament.law{{ page.url }}",
    "telephone": "+1-724-733-3500",
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "3950 Wm Penn Hwy, Suite 5",
        "addressLocality": "Murrysville",
        "addressRegion": "PA",
        "postalCode": "15668",
        "addressCountry": "US"
    },
    "areaServed": {
        "@type": "State",
        "name": "Pennsylvania"
    },
    "serviceType": "{{ title }}"
}
</script>
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "{{ title }}",
    "url": "https://www.ament.law{{ page.url }}",
    "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": [".practice-area-main h2", ".practice-area-main p", ".quick-answer"]
    }
}
</script>
{% endblock %}
<section class="simple-header">
    <div class="container">
        <h1>{{ title }}</h1>
        <p>{{ subtitle }}</p>
    </div>
</section>
<section id="practice-area-content" class="fade-in">
    <div class="container">
        <div class="practice-area-layout">
            <article class="practice-area-main">
                {{ content | safe }}
            </article>
            <aside class="practice-area-sidebar">
                <div class="sidebar-widget">
                    <h4>Related Services</h4>
                    <ul class="sidebar-links">
                        {% if related_services %}
                            {% for service in related_services %}
                            <li><a href="{{ service.url }}">{{ service.name }}</a></li>
                            {% endfor %}
                        {% else %}
                        <li><a href="/practice-areas/estate-planning/">Estates & Trusts</a></li>
                        <li><a href="/practice-areas/probate-administration/">Probate Administration</a></li>
                        <li><a href="/practice-areas/real-estate-law/">Real Estate Settlement</a></li>
                        <li><a href="/practice-areas/elder-law/">Elder Law</a></li>
                        <li><a href="/practice-areas/business-formation/">Business Formation</a></li>
                        <li><a href="/practice-areas/business-law/">Business Services</a></li>
                        {% endif %}
                    </ul>
                </div>
                {% if attorneys %}
                <div class="sidebar-widget">
                    <h4>Attorneys</h4>
                    <p>This service is handled by:</p>
                    <ul class="sidebar-links">
                        {% for attorney in attorneys %}
                        <li><a href="{{ attorney.url }}">{{ attorney.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div class="sidebar-widget contact-widget">
                    <h4>Get Help Today</h4>
                    <p>Contact us to schedule a consultation.</p>
                    <p class="sidebar-phone"><a href="tel:724-733-3500">(724) 733-3500</a></p>
                    <a href="/contact/" class="cta-button-light">Schedule a Consultation</a>
                </div>
            </aside>
        </div>
    </div>
</section>
