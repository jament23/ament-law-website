        "name": "Ament Law Group, P.C.",
        "description": "Trusted legal guidance for families and businesses in Western Pennsylvania. Estate planning, probate, real estate, elder law, and business law.",
        "url": "https://www.ament.law",
        "telephone": "+1-724-733-3500",
        "email": "hello@ament.law",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "3950 Wm Penn Hwy, Suite 5",
            "addressLocality": "Murrysville",
            "addressRegion": "PA",
            "postalCode": "15668",
            "addressCountry": "US"
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": 40.4532,
            "longitude": -79.6919
        },
        "openingHoursSpecification": [
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"],
                "opens": "08:30",
                "closes": "17:00"
