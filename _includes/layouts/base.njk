    <meta name="description" content="{{ description }}">
    <link rel="canonical" href="https://www.ament.law{{ page.url }}">

    <!-- Open Graph -->
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="https://www.ament.law{{ page.url }}">
    <meta property="og:site_name" content="Ament Law Group, P.C.">
