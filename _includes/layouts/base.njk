            { "@type": "AdministrativeArea", "name": "Allegheny County, PA" },
            { "@type": "AdministrativeArea", "name": "Washington County, PA" },
            { "@type": "AdministrativeArea", "name": "Butler County, PA" },
            { "@type": "AdministrativeArea", "name": "Fayette County, PA" },
            { "@type": "AdministrativeArea", "name": "Indiana County, PA" }
        ],
        "priceRange": "$$",
        "knowsAbout": ["Estate Planning","Probate","Trust Administration","Real Estate Law","Business Formation","Elder Law","Medicaid Planning","Title Insurance"],
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Legal Services",
            "itemListElement": [
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Estate Planning", "url": "https://www.ament.law/practice-areas/estate-planning/" } },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Probate & Trust Administration", "url": "https://www.ament.law/practice-areas/probate-administration/" } },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Real Estate Settlement Services", "url": "https://www.ament.law/practice-areas/real-estate-law/" } },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Business Formation", "url": "https://www.ament.law/practice-areas/business-formation/" } },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Elder Law", "url": "https://www.ament.law/practice-areas/elder-law/" } }
            ]
        },
        "sameAs": []
    }
    </script>
    {% block head %}{% endblock %}
</head>
<body>
    <header>
