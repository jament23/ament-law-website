<script>
(function () {
  document.querySelectorAll('.option-label input').forEach(function (inp) {
    inp.addEventListener('change', function () {
      document.querySelectorAll('input[name="' + inp.name + '"]').forEach(function (i) {
        i.closest('.option-label').classList.toggle('selected', i.checked);
      });
      tryCalc();
    });
  });

  function val(name) { var e = document.querySelector('input[name="' + name + '"]:checked'); return e ? e.value : null; }
  function ready() { return ['assets','realestate','spouse','heirs','debts','disputes','accounts'].every(function(n){return val(n);}); }

  function box(title, body, highlight) {
    return '<div class="option-box' + (highlight ? ' highlight' : '') + '"><h4>' + title + '</h4><p>' + body + '</p></div>';
  }

  function tryCalc() {
    if (!ready()) return;

    var assets    = val('assets');
    var realestate= val('realestate');
    var spouse    = val('spouse');
    var heirs     = val('heirs');
    var debts     = val('debts');
    var disputes  = val('disputes');
    var accounts  = val('accounts');

    var badgeClass, badgeText, headline, bodyText, optionsHTML = '';

    var hasRE      = realestate === 'yes';
    var hasDispute = disputes === 'yes';
    var hasDebts   = debts === 'yes';
    var smallAssets= assets === 'under25k';
    var medAssets  = assets === '25to50k';
    var minors     = heirs === 'mixed';

    if (hasDispute) {
      badgeClass = 'badge-unlikely';
      badgeText  = '‚ùå Full Probate Recommended';
      headline   = 'Disputes require formal court oversight';
      bodyText   = 'Where the will or distribution is contested, formal estate administration provides the court supervision necessary to protect all parties. Simplified procedures are not designed for contested matters and courts will typically require full administration.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">What this means</h3>'
        + box('Formal Estate Administration', 'Petition for letters testamentary or administration, creditor notice period, inventory, inheritance tax return, and family settlement or audit before distribution.', false);
    } else if (hasRE) {
      badgeClass = 'badge-unlikely';
      badgeText  = 'üìã Full Probate Likely Required';
      headline   = 'Real estate typically requires formal administration';
      bodyText   = 'Pennsylvania real estate titled in the decedent\'s name alone generally requires a formal probate proceeding to transfer title ‚Äî simplified procedures do not cover real property. The non-real estate assets may still qualify for streamlined handling depending on their value.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">What may still apply</h3>'
        + box('Family Exemption', 'The surviving spouse or minor children may claim up to $3,500 in personal property as a priority claim ‚Äî regardless of estate size or whether probate is required.', false)
        + (accounts === 'yes' && !hasDebts ? box('Direct Payment (non-real-estate assets)', 'Many PA financial institutions will release accounts under $10,000 directly to heirs or the spouse with proper documentation and an affidavit ‚Äî no court filing required. Ask each institution about their procedure.', false) : '');
    } else if (hasDebts && !smallAssets) {
      badgeClass = 'badge-maybe';
      badgeText  = '‚ö†Ô∏è Simplified Procedures May Be Limited';
      headline   = 'Significant debts complicate simplified administration';
      bodyText   = 'Voluntary Administration and other simplified procedures still require payment of valid creditor claims. With significant debts, formal administration may provide better protection for the personal representative and ensure creditors are handled in the correct order of priority.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">Options to explore</h3>'
        + box('Voluntary Administration (if assets under $50K)', 'May still be available ‚Äî but the personal representative remains liable for correct creditor distribution. An attorney review is strongly advisable.', false)
        + box('Family Exemption', 'Up to $3,500 in personal property may be claimed by the surviving spouse or minor children as a priority exemption before general creditors.', false);
    } else if (smallAssets && !minors) {
      badgeClass = 'badge-likely';
      badgeText  = '‚úÖ Simplified Procedures Likely Available';
      headline   = 'This estate has strong characteristics for Voluntary Administration';
      bodyText   = 'Based on your answers, this estate appears to be a good candidate for Pennsylvania\'s simplified Voluntary Administration procedure ‚Äî a streamlined process that avoids the formal appointment of a personal representative. Eligibility requires no real estate and probate assets under $50,000.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">Procedures likely available</h3>'
        + box('Voluntary Administration (20 Pa. C.S. ¬ß 3101)', 'For estates under $50,000 with no real estate. An authorized person files a simplified petition with the Register of Wills ‚Äî no formal letters testamentary required. Creditors must still be paid from the estate.', true)
        + box('Family Exemption', 'The surviving spouse or minor children may claim up to $3,500 in personal property as a priority claim before distribution to other beneficiaries.', false)
        + (accounts === 'yes' ? box('Direct Payment from Financial Institutions', 'Many PA financial institutions will release accounts under $10,000 directly to heirs with an affidavit of entitlement ‚Äî worth checking with each institution before filing anything.', false) : '');
    } else if (medAssets && !minors) {
      badgeClass = 'badge-maybe';
      badgeText  = 'üü° May Qualify ‚Äî Verification Needed';
      headline   = 'Simplified administration may be available';
      bodyText   = 'This estate is near the $50,000 threshold for Voluntary Administration. Eligibility depends on a precise inventory of assets that are actually subject to probate ‚Äî accounts with beneficiaries, joint accounts, and IRAs/401(k)s do not count toward the threshold.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">Procedures to explore</h3>'
        + box('Voluntary Administration', 'Available if total probate assets (excluding beneficiary-designated accounts and real estate) are confirmed under $50,000. A precise inventory is needed to confirm eligibility.', false)
        + box('Family Exemption', 'Up to $3,500 in personal property for surviving spouse or minor children ‚Äî available regardless of which procedure is used.', false);
    } else {
      badgeClass = 'badge-unlikely';
      badgeText  = 'üìã Full Administration Likely Required';
      headline   = 'Standard probate administration is likely needed';
      bodyText   = 'Based on your answers ‚Äî asset size, beneficiary complexity, or other factors ‚Äî this estate likely requires standard estate administration through the Register of Wills. This involves formal appointment of a personal representative, creditor notification, an inventory, inheritance tax return, and a family settlement agreement or court audit before distribution.';
      optionsHTML = '<h3 style="font-size:0.95rem;margin-bottom:10px;">What this involves</h3>'
        + box('Formal Estate Administration', 'Appointment of personal representative, 1-month creditor notice period, asset inventory and appraisals, inheritance tax return (REV-1500), and family settlement or Orphans\' Court audit before final distribution.', false)
        + (spouse === 'yes' ? box('Family Exemption', 'Surviving spouse may still claim up to $3,500 in personal property as a priority exemption before other distributions.', false) : '');
    }

    document.getElementById('result-badge').innerHTML = badgeText;
    document.getElementById('result-badge').className = 'result-badge ' + badgeClass;
    document.getElementById('result-headline').textContent = headline;
    document.getElementById('result-body').textContent = bodyText;
    document.getElementById('options-div').innerHTML = optionsHTML;

    var panel = document.getElementById('result-panel');
    panel.classList.add('visible');
    panel.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  document.getElementById('reset-btn').addEventListener('click', function () {
    document.querySelectorAll('.option-label input').forEach(function (i) {
      i.checked = false;
      i.closest('.option-label').classList.remove('selected');
    });
    document.getElementById('result-panel').classList.remove('visible');
  });
})();
</script>
