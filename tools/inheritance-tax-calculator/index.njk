<script>
(function () {
  var fmt = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });

  function parseVal(str) {
    var n = parseFloat(str.replace(/[^0-9.]/g, ''));
    return isNaN(n) ? 0 : n;
  }

  function formatInput(input) {
    var val = parseVal(input.value);
    input.value = val > 0 ? fmt.format(val) : '';
  }

  function calculate() {
    var rows = document.querySelectorAll('#beneficiaryRows .beneficiary-row');
    var totalAssets = 0, totalTax = 0;

    rows.forEach(function (row) {
      var rate = parseFloat(row.getAttribute('data-rate')) || 0;
      var input = row.querySelector('.calc-input');
      var taxEl = row.querySelector('.row-tax');
      var val = parseVal(input.value);
      var tax = val * rate;

      totalAssets += val;
      totalTax += tax;

      if (rate === 0) {
        taxEl.textContent = val > 0 ? '0% — exempt' : '—';
      } else {
        taxEl.textContent = val > 0 ? fmt.format(tax) : '$0';
      }
    });

    var discounted = totalTax * 0.95;
    var savings = totalTax - discounted;

    document.getElementById('totalAssets').textContent = fmt.format(totalAssets);
    document.getElementById('totalTax').textContent = fmt.format(totalTax);
    document.getElementById('discountedTax').textContent = fmt.format(discounted);
    document.getElementById('discountSavings').textContent = savings > 0 ? '−' + fmt.format(savings) : '$0';
  }

  // Wire up inputs
  document.querySelectorAll('.calc-input').forEach(function (input) {
    input.addEventListener('input', calculate);
    input.addEventListener('blur', function () { formatInput(input); calculate(); });
    input.addEventListener('focus', function () {
      var val = parseVal(input.value);
      input.value = val > 0 ? String(val) : '';
    });
  });

  // Reset
  document.getElementById('resetBtn').addEventListener('click', function () {
    document.querySelectorAll('.calc-input').forEach(function (i) { i.value = ''; });
    document.querySelectorAll('.row-tax').forEach(function (el) { el.textContent = '—'; });
    ['totalAssets','totalTax','discountedTax','discountSavings'].forEach(function (id) {
      document.getElementById(id).textContent = '$0';
    });
  });
})();
</script>
