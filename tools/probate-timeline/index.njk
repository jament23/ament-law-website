<script>
(function () {
  document.querySelectorAll('.option-label input').forEach(function (inp) {
    inp.addEventListener('change', function () {
      document.querySelectorAll('input[name="' + inp.name + '"]').forEach(function (i) {
        i.closest('.option-label').classList.toggle('selected', i.checked);
      });
      tryCalc();
    });
  });

  function val(name) { var e = document.querySelector('input[name="' + name + '"]:checked'); return e ? e.value : null; }
  function ready() { return ['will','realestate','business','creditors','heirs','executor','county'].every(function(n){return val(n);}); }

  function tryCalc() {
    if (!ready()) return;

    var will       = val('will');
    var realestate = val('realestate');
    var business   = val('business');
    var creditors  = val('creditors');
    var heirs      = val('heirs');
    var executor   = val('executor');
    var county     = val('county');

    var min = 6, max = 12;
    var factors = [];
    var phases = [
      ['Open estate &amp; qualify personal representative', '2â€“6 weeks'],
      ['Publish creditor notice', '1 month (mandatory notice period)'],
      ['Inventory &amp; appraisals', '1â€“3 months'],
      ['Inheritance tax return &amp; payment', 'Due 9 months from date of death'],
      ['Family settlement agreement or formal audit', '1â€“3 months'],
      ['Final distribution &amp; close estate', '2â€“6 weeks after settlement']
    ];

    if (will === 'no') {
      min += 1; max += 2;
      factors.push(['âš ï¸', 'Intestate estates require administrator appointment â€” adds steps compared to a named executor.']);
    } else if (will === 'contested') {
      min += 6; max += 24;
      factors.push(['ðŸ”´', 'Will contests can extend probate significantly â€” contested matters often take 1â€“3 years to resolve.']);
      phases.splice(1, 0, ['Will contest litigation', '6 months â€“ 3 years']);
    }

    if (realestate === 'sell') {
      min += 2; max += 6;
      factors.push(['ðŸ ', 'Selling estate real estate adds time for listing, negotiation, and settlement â€” typically 2â€“6 months.']);
      phases.splice(2, 0, ['List &amp; sell real estate', '2â€“6 months']);
    } else if (realestate === 'keep') {
      min += 1; max += 2;
      factors.push(['ðŸ ', 'Transferring real estate to heirs requires deed preparation and county recording.']);
    }

    if (business === 'yes') {
      min += 2; max += 6;
      factors.push(['ðŸ“Š', 'Business interests typically require a formal appraisal or valuation â€” adds 2â€“6 months.']);
      phases.splice(3, 0, ['Business interest valuation', '2â€“6 months']);
    }

    if (creditors === 'moderate') {
      min += 1; max += 2;
      factors.push(['ðŸ’³', 'Moderate debts extend administration while claims are resolved and paid.']);
    } else if (creditors === 'significant') {
      min += 3; max += 8;
      factors.push(['ðŸ”´', 'Significant debts or Medicaid estate recovery claims can substantially delay final distribution.']);
    }

    if (heirs === 'distant') {
      min += 1; max += 2;
      factors.push(['ðŸ“¬', 'Out-of-state or hard-to-reach heirs slow document collection and approvals.']);
    } else if (heirs === 'disputed') {
      min += 4; max += 12;
      factors.push(['ðŸ”´', 'Heir disputes significantly delay distribution and may require formal court involvement.']);
    }

    if (executor === 'outofstate') {
      min += 1; max += 2;
      factors.push(['âœˆï¸', 'Out-of-state executors typically require a PA resident co-executor or surety bond â€” adds steps at opening.']);
    }

    if (county === 'allegheny') {
      factors.push(['â„¹ï¸', 'Allegheny County: formal audits through the Orphans\' Court can add 3â€“6 months on complex or disputed estates.']);
    } else if (county === 'westmoreland') {
      factors.push(['â„¹ï¸', 'Westmoreland County: most uncontested estates move efficiently through the Register of Wills.']);
    }

    if (factors.length === 0) {
      factors.push(['âœ…', 'No significant complicating factors identified â€” good conditions for an efficient administration.']);
    }

    var headline = min + 'â€“' + max + (max >= 24 ? '+' : '') + ' months';
    var sub = max <= 10 ? 'Relatively straightforward â€” favorable conditions for an efficient probate.'
            : max <= 18 ? 'Moderate complexity â€” plan for the longer end if any complications arise.'
            : 'Complex estate â€” multiple factors that can meaningfully extend the timeline.';

    document.getElementById('est-headline').textContent = headline;
    document.getElementById('est-sub').textContent = sub;

    var pct = Math.min(98, Math.round(((min + max) / 2) / 36 * 100));
    document.getElementById('bar-fill').style.width = pct + '%';
    document.getElementById('bar-min').textContent = min + ' months';
    document.getElementById('bar-max').textContent = max + '+ months';

    var fl = document.getElementById('factors-list');
    fl.innerHTML = '';
    factors.forEach(function (f) {
      var li = document.createElement('li');
      li.innerHTML = '<span class="factor-icon">' + f[0] + '</span><span>' + f[1] + '</span>';
      fl.appendChild(li);
    });

    var pb = document.getElementById('phase-tbody');
    pb.innerHTML = '';
